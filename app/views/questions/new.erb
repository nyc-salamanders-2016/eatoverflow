<div class="container-fluid">

  <div class="page-header">
    <h1>Ask a question</h1>
  </div>

  <%= erb :'_show_errors' %>

  <form action="/questions" method="post">
    <div class="form-group">
      <label>Title:</label>
      <input type='text'  class="form-control" name='question[title]'>
    </div>
    <div class="form-group">
      <label>Body:</label>
      <textarea name="question[body]"  class="form-control" rows="10" cols="50"></textarea>
    <div class="form-group">
    </div>
    <div class="form-group">
      <label>Tags:</label>
      <input type='text' class="form-control" name='tags'>
      <small id="tagHelp" class="form-text text-muted">Separate your tags with space.</small>
    </div>
    <input type='hidden' class="form-control" name='question[user_id]' value='<%= current_user.id %>'>
    <button class="submit" class="btn btn-primary" type="submit">Ask!</button>
  </form>

</div>
